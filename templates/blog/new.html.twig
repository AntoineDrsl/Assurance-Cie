{% extends 'base.html.twig' %}

{% block title %}Blog - Assurance{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href=" {{ asset('assets/css/newArticle.css') }}">
{% endblock %}

{% block body %}

    <div id="newArticleContainer">
    
        <div id="newArticleContent">
            {% if blog == "assurance" %}
                <h1 class="mb-5 text-center">Assurance - Créer un article</h1>
            {% elseif blog == "moto" %}
                <h1 class="mb-5 text-center">Moto - Créer un article</h1>
            {% elseif blog == "modify" %}
                <h1 class="mb-5 text-center">Modifier cet article</h1>
            {% endif %}

            {{ form_start(articleForm) }}

                <div class="form-group">
                    {{ form_row(articleForm.title) }}
                </div>
                <div class="form-group">
                    {{ form_row(articleForm.content) }}
                </div>
                <div class="form-group mt-3">
                    {{ form_row(articleForm.image) }}
                </div>
                <div class="text-center">
                    {{ form_row(articleForm.submit) }}
                </div>

            {{ form_end(articleForm) }}
        </div>

    </div>

{% endblock %}