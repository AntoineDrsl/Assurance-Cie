{% extends 'base.html.twig' %}

{% block title %} Liste des articles {% endblock %}
{% block stylesheets %} <link rel="stylesheet" href=" {{ asset('./assets/css/liste-article.css') }}"> {% endblock %}


{% block body %}
<div class="bgcontainer">
    <div class="container" style="min-height: 75vh">
        <div class="flexCenter">
            {% if blog == "assurance" %}
                <h1 class="marginTop mb-5">Tout savoir sur l'assurance</h1>
            {% else %}
                <h1 class="marginTop mb-5">Tout savoir sur la moto</h1>
            {% endif %}
        </div>

        <div class="row">
            {% for article in articles  %}
                <div class="col-md-4">
                    <div>
                        <div class="imgContainer">
                            <img src="{{ asset('/uploads/images/' ~ article.image) }}">
                        </div>
                        <h5>{{article.title}}</h5>
                        <span>Le {{article.createdAt| date('d/m/Y')}}</span><br>
                        <a href="{{ path('article', {'id': article.id}) }}" class="btn btn-outline-light mt-3"> Voir l'article </a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('removeArticle', {'id': article.id}) }}" class="btn btn-danger mt-3">Supprimer l'article</a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% include 'footer.html.twig' %}


{% endblock %}
