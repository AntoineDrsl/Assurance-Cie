{% extends 'base.html.twig' %}

{% block title %} Liste des articles {% endblock %}
{% block stylesheets %} <link rel="stylesheet" href=" {{ asset('./assets/css/liste-article.css') }}"> {% endblock %}


{% block body %}
<div class="bgcontainer">
    <div class="flexCenter">
        <h1 class="marginTop">Tout savoir sur l'assurance</h1>
    </div>

    <div class="flexContainer">
        {% for article in articles  %} 
            <div class="card" style="width: 18rem;">
                {% if article.image is not null %}
                    <img class="card-img-top" src="{{ asset('/uploads/' ~ article.image) }}">
                {% endif %}
                    <div class="card-body">
                        <p class="card-text">{{article.title}}</p>
        
                        <p class="card-text">{{article.createdAt| date('d/n/Y')}}</p>

                    </div>
            </div>
        {% endfor %}
    </div>
</div>



{% endblock %}
