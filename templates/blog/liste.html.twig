{% extends 'base.html.twig' %}

{% block title %} Liste des articles {% endblock %}

{% block body %}

<ul>
    {% for article in articles %}
    {{dump(article)}}

    {{article.title}}
    {{article.content}}

    {% if article.image is not null %}
        <img  src="{{ asset('/uploads/' ~ article.image) }}">
    {% endif %}

    {% endfor %}
</ul>

{% endblock %}
