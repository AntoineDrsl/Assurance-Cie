{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href=" {{ asset('assets/css/login.css') }}">{% endblock %}

{% block body %}
<div id="loginContainer">

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div id="loginContent">
        <h1>Je me connecte</h1>

        <form method="post">
        
            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            </div>

            <div class="form-group">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>
        
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
           
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me" class="form-check"> Se rappeler de moi
                </label>
            </div>
        
            <div class="text-center mt-4">
                <button class="btn btn-lg btn-outline-light" type="submit">Me connecter</button>
            </div>
        </form>
    </div>

</div>
{% endblock %}
