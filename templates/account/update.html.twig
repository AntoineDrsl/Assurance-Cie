{% extends 'base.html.twig' %}

{% block title %}Modifier vos informations{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href=" {{ asset('assets/css/register.css') }}">{% endblock %}

{% block body %}
    <div id="registerContainer">
        <div id="registerContent">

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger my-3">
                    {{ message }}
                </div>
            {% endfor %}  

            <h1>Modifiez vos informations</h1>

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm._token) }}
                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_row(registrationForm.firstname) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(registrationForm.lastname) }}
                    </div>
                </div>
                {{ form_row(registrationForm.birthday) }}
                <div class="form-row">
                    <div class="form-group col-md-8">       
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="form-group col-md-4">
                        {{ form_row(registrationForm.tel) }}
                    </div>
                </div>
                <div class="form-row" id="passwords">
                    <div class="form-group col-md-6">   
                        {{ form_label(registrationForm.plainPassword.first, 'Nouveau mot de passe') }}
                        {{ form_widget(registrationForm.plainPassword.first) }}
                    </div>
                    <div class="form-group col-md-6">   
                        {{ form_label(registrationForm.plainPassword.second, 'Répétez le mot de passe') }}
                        {{ form_widget(registrationForm.plainPassword.second) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_row(registrationForm.image) }}
                </div>
                <div class="form-row" id="agreeTerms">
                    {{ form_label(registrationForm.agreeTerms) }}
                    {{ form_widget(registrationForm.agreeTerms) }}
                </div>
                <div class="form-group my-5">
                    <label for="verifypassword">Entrez votre mot de passe :</label>
                    <input type="password" name="verifypassword" id="verifypassword" class="form-control">
                </div>
                <div class="text-center">
                    {{ form_widget(registrationForm.submit, {'label': 'Modifier'}) }}
                </div>

            {{ form_end(registrationForm, {'render_rest': false}) }}
        </div>

    </div>
{% endblock %}