{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href=" {{ asset('assets/css/register.css') }}">{% endblock %}

{% block body %}
    <div id="registerContainer">
        <div id="registerContent">
            <h1>Inscrivez-vous</h1>

            {{ form_start(registrationForm) }}
                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_row(registrationForm.firstname) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_row(registrationForm.lastname) }}
                    </div>
                </div>
                {{ form_row(registrationForm.birthday) }}
                <div class="form-row">
                    <div class="form-group col-md-8">       
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="form-group col-md-4">
                        {{ form_row(registrationForm.tel) }}
                    </div>
                </div>
                <div class="form-row" id="passwords">
                    <div class="form-group col-md-6">   
                        {{ form_row(registrationForm.plainPassword.first) }}
                    </div>
                    <div class="form-group col-md-6">   
                        {{ form_row(registrationForm.plainPassword.second) }}
                    </div>
                </div>
                <div class="form-row" id="agreeTerms">
                    {{ form_label(registrationForm.agreeTerms) }}
                    {{ form_widget(registrationForm.agreeTerms) }}
                </div>
                <div class="text-center">   
                    {{ form_row(registrationForm.submit) }}
                </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
